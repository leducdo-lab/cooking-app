<% provide(:title, "Log in") %>
<div class="main-container black-layout">

  <div class="container">
    <div class="login-wrap">
        <div class="login-content">
            <h3 class="my-3">Sign in</h3>
            <div class="login-form">
              <%= form_for(:session, url: login_path) do |f| %>
                  <div class="form-group">
                    <%= f.label :email, "Email Address", style: "color: #666; text-align: left" %>
                    <%= f.email_field :email, class: 'form-control au-input au-input--full', placeholder: 'Email' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, "Password", style: "color: #666; text-align: left" %>
                    <%= f.password_field :password, class: 'form-control au-input au-input--full',  placeholder: 'Password' %>
                  </div>
                  <div class="login-checkbox">
                      <div class="form-check">
                        <%= f.label :remember_me do %>
                        <%= f.check_box :remember_me, class: "form-check-input" %>
                      </div>
                      <span class="text-muted">Remember Me</span>
                      <% end %>
                      <label>
                          <a href="#">Forgotten Password?</a>
                      </label>
                  </div>
                  <%= f.submit "sign in", class: "au-btn au-btn--block au-btn--green m-b-20" %>
                <% end %>
                <div class="social-login-content">
                    <div class="social-button">
                        <%= link_to "Sign in with Facebook", "/auth/facebook", class: "au-btn au-btn--block au-btn--blue m-b-20 text-white" %>
                        <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                    </div>
                </div>
                <div class="register-link">
                    <p style="color: #666">
                        Don't you have account?
                        <%= link_to "Sign up now!", signup_path %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>