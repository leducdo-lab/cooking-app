<% provide(:title, "Log in") %>
<div class="main-container black-layout">
  <div class="row">

    <div class="col-xl-6 col-md-6">
    asasd
    </div>

    <div class="col-xl-6 col-md-6">
      <div class="card login-form mt-5">
        <div class="card-body" style="padding: 5% 15%">
          <h3 class="card-title mb-4">Log in</h3>

          <%= form_for(:session, url: login_path) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control',  placeholder: 'Password' %>
            </div>
            <div class="form-group">
              <div class="form-check text-left pl-0">
                <%= f.label :remember_me, class: "form-check-label" do %>
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <span>Remember </span>
              </div>
            </div>
          <% end %>

            <%= f.submit "Log in", class: "btn btn-primary" %>
          <% end %>

          <div class="form-group">
            <p>New user? <%= link_to "Sign up now!", signup_path %></p>
            <%= link_to "Sign in with Facebook", "/auth/facebook" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>