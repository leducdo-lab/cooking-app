<%= form_for(@user) do |f| %>
  <div class="form-group mt-3" >
    <%= render 'shared/error_messages', object: @user %>
  </div>

  <div class="form-group">
    <%= f.label :name, t("form.register.name"), style: "color: #666; text-align: left" %>
    <%= f.text_field :name, class: 'form-control au-input au-input--full', placeholder:  t("form.register.name") %>
  </div>

  <div class="form-group">
    <%= f.label :name, t("form.register.email"), style: "color: #666; text-align: left" %>
    <%= f.email_field :email, class: 'form-control au-input au-input--full', placeholder:  t("form.register.email") %>
  </div>

  <div class="form-group">
    <%= f.label :name, t("form.register.pass"), style: "color: #666; text-align: left" %>
    <%= f.password_field :password, class: 'form-control au-input au-input--full', placeholder:  t("form.register.pass") %>
  </div>

  <div class="form-group">
    <%= f.label :name, t("form.register.confirm"), style: "color: #666; text-align: left" %>
    <%= f.password_field :password_confirmation, class: 'form-control au-input au-input--full', placeholder: t("form.register.confirm") %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button_text), class: "au-btn au-btn--block au-btn--green m-b-20 mt-4" %>
  </div>
<% end %>